# =====================================
# Axionax Web Universe - Environment Configuration
# Version: 1.8.0-testnet
# Last Updated: December 5, 2025
# =====================================

# ==============================
# Network Configuration
# ==============================
CHAIN_ID=86137
NETWORK_NAME=axionax-testnet-1
APP_VERSION=1.8.0-testnet

# ==============================
# Node Environment
# ==============================
NODE_ENV=production

# ==============================
# API Endpoints
# ==============================

# Public RPC Endpoints
NEXT_PUBLIC_RPC_URL=https://testnet-rpc.axionax.org
NEXT_PUBLIC_WS_URL=wss://testnet-ws.axionax.org

# Block Explorer
NEXT_PUBLIC_EXPLORER_URL=https://explorer.axionax.org
NEXT_PUBLIC_EXPLORER_API_URL=https://explorer-api.axionax.org

# Faucet
NEXT_PUBLIC_FAUCET_URL=https://faucet.axionax.org
NEXT_PUBLIC_FAUCET_API_URL=https://faucet-api.axionax.org

# Main Website
NEXT_PUBLIC_WEBSITE_URL=https://axionax.org

# Marketplace
NEXT_PUBLIC_MARKETPLACE_URL=https://marketplace.axionax.org

# ==============================
# Database Configuration
# ==============================

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=axionax_testnet
POSTGRES_USER=axionax
POSTGRES_PASSWORD=change_this_password_in_production

# Connection String (alternative)
DATABASE_URL=postgresql://axionax:change_this_password_in_production@postgres:5432/axionax_testnet

# ==============================
# Redis Configuration
# ==============================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379

# ==============================
# API Keys & Secrets
# ==============================

# Generate strong random secrets:
# openssl rand -hex 32

# JWT Secret (for authentication)
JWT_SECRET=your_jwt_secret_here_generate_with_openssl_rand

# Session Secret
SESSION_SECRET=your_session_secret_here_generate_with_openssl_rand

# Explorer API Key
EXPLORER_API_KEY=your_explorer_api_key_here

# Faucet API Key
FAUCET_API_KEY=your_faucet_api_key_here

# ==============================
# CORS Configuration
# ==============================
CORS_ORIGIN=https://axionax.org,https://www.axionax.org,https://explorer.axionax.org,https://faucet.axionax.org

# ==============================
# Rate Limiting
# ==============================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Faucet specific rate limiting
FAUCET_COOLDOWN_HOURS=24
FAUCET_AMOUNT=10

# ==============================
# Monitoring & Logging
# ==============================

# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Log Level (error, warn, info, debug, trace)
LOG_LEVEL=info
LOG_FORMAT=json

# Enable Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# ==============================
# Feature Flags
# ==============================
ENABLE_FAUCET=true
ENABLE_MARKETPLACE=true
ENABLE_STAKING=false
ENABLE_GOVERNANCE=false
ENABLE_DEBUG=false

# ==============================
# Email Configuration (Optional)
# ==============================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@axionax.org
SMTP_PASS=your_app_specific_password
EMAIL_FROM=noreply@axionax.org

# ==============================
# Cloud Storage (Optional)
# ==============================

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# IPFS
IPFS_GATEWAY=https://ipfs.io/ipfs/
IPFS_API_URL=http://localhost:5001

# ==============================
# Analytics (Optional)
# ==============================
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# ==============================
# Social Media
# ==============================
DISCORD_WEBHOOK_URL=
TWITTER_API_KEY=
TELEGRAM_BOT_TOKEN=

# ==============================
# Development Only
# ==============================

# Hot Reload
WATCHPACK_POLLING=false
CHOKIDAR_USEPOLLING=false

# Debug Mode
DEBUG=false
VERBOSE=false

# ==============================
# Production Deployment
# ==============================

# Server
PORT=3000
HOST=0.0.0.0

# TLS/SSL
SSL_CERT_PATH=/etc/ssl/certs/axionax.crt
SSL_KEY_PATH=/etc/ssl/private/axionax.key

# ==============================
# Notes
# ==============================
# 1. Never commit .env files to version control
# 2. Generate strong random secrets for production
# 3. Use environment-specific .env files:
#    - .env.local (local development)
#    - .env.staging (staging environment)
#    - .env.production (production environment)
# 4. Keep this .env.example file updated with new variables
