{
  "name": "@axionax/api",
  "version": "1.9.0",
  "private": true,
  "description": "Backend API for Axionax - Testnet Indexer & Genesis Generator",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@hono/zod-validator": "^0.4.3",
    "drizzle-orm": "^0.38.4",
    "hono": "^4.11.7",
    "postgres": "^3.4.8",
    "viem": "^2.45.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.19.8",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.39.2",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  }
}
